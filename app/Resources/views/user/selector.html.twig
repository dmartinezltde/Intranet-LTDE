{% block body %}
  <div class="row">
    <div class="col-md-12">

      <div class="row">
        <div class="col-md-12">
          <div class="portlet light ">
            <div class="portlet-title">
              <div class="caption font-dark">
                <i class="icon-map font-dark"></i>
                <span class="caption-subject bold uppercase"> {{ users|length }} users found</span>
              </div>
            </div>
            <div class="portlet-body">
              <table id="datatable_1" class="table table-striped table-bordered table-hover order-column">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>&nbsp;</th>
                  </tr>
                </thead>
                <tbody>
                {% for u in users %}
                  <tr>
                    <td class="uName">{{ u.username }}</td>
                    <td>{{ u.email }}</td>
                    <td>
                      <button id="uId_{{ u.id }}" class="btn btn-default select">Select</button>
                    </td>
                  </tr>
                {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
{% endblock %}


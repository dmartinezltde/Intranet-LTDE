{% extends 'layout.html.twig' %}

{% block page_stylesheets %}
  <link href="{{ asset('assets/global/plugins/datatables/datatables.min.css') }}" rel="stylesheet" type="text/css" />
  <link href="{{ asset('assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css') }}" rel="stylesheet" type="text/css" />
  <link href="{{ asset('assets/global/plugins/fancybox/source/jquery.fancybox.css') }}" rel="stylesheet" type="text/css" />
  <link href="{{ asset('assets/global/plugins/typeahead/typeahead.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block page_head %}
  {% include '_page_head.html.twig' with { 'page_head_title': title, 'page_head_subtitle': subtitle } %}
{% endblock %}

{% block content %}
  {% include 'common/breadcrumb.html.twig' with {'links': { 'Home': path('homepage') }, 'active': breadcrumb } %}

  <div class="page-content-inner">

    {# Display the flash messages #}
    {% include 'common/feedback.html.twig' %}

    {# Show the filter div #}
    {# JAVI {% include 'common_filter.html.twig'  with {'filterForm': filterForm} %} #}

    {# Show the table div #}
    {# JAVI TO CHANGE #}
    {{ render(controller('AppBundle:'~ instance_class ~ ':list', {})) }}  {# JAVI: Check if there is a cleaner way to do this #}

  </div>
{% endblock %}

{% block javascript_page_plugins %}
  <script src="{{ asset('assets/global/plugins/typeahead/handlebars.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('assets/global/plugins/typeahead/typeahead.bundle.min.js') }}" type="text/javascript"></script>
  <script src="{{ asset('assets/global/plugins/moment.min.js') }}" type="text/javascript"></script>
{% endblock %}

{% block page_scripts %}
  <script src="{{ asset('assets/js/generic.js') }}" type="text/javascript"></script>
  <script src="{{ asset('assets/js/provider.js') }}" type="text/javascript"></script>
{% endblock %}

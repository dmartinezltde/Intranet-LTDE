<!-- JAVI. This div should be separated from the table itself? -->
<div class="form-group " ><label class="control-label col-md-3 required">{{ label }}</label>
  <div class="col-md-9">
    <table id="datatable_1" class="table table-striped table-bordered table-hover order-column">
        <thead>
        </thead>
        <tbody>
          {% for entity_group_key in entity_collection|keys|sort %}
            {% set entity_group = entity_collection[entity_group_key] %}
            <tr>
              <td colspan="{{ 2 + entity_fields|length }}">
                 {{ entity_group_key }}
              </td>
            </tr>
            {% for entity in entity_group %}  
              <tr>
                <td>
                  {{ form_widget(form.activities[entity.id]) }}
                </td>
                <td>
                  {{ linkProvider.createLink(entity)|raw }}
                </td>
              {% for field in entity_fields %}
                <td>
                  {{ linkProvider.createLink(attribute(entity, field)) }}
                </td>
              {% endfor %}
              </tr>
            {% endfor %}
          {% endfor %}
        </tbody>
    </table>
  </div>
</div>

<div class="message-user">
{% for level in ['danger', 'warning', 'success'] %}
  {% for flash_message in app.session.flashbag.get(level) %}
    <div class="alert alert-{{ level }}">
      {% if flash_message is iterable %}
        <ul>
        {% for m in flash_message %}
          <li>{{ m|raw }}</li>
        {% endfor %}
        </ul>
      {% else %}
        {{ flash_message|raw }}
      {% endif %}
    </div>
  {% endfor %}
{% endfor %}
</div>
